{
  "name": "baileys-session-manager-mongodb",
  "version": "1.0.1",
  "description": "Professional MongoDB session manager for Baileys WhatsApp Web API with full TypeScript support",
  "license": "MIT",
  "author": {
    "name": "Eshan Chathuranga",
    "email": "your.email@example.com"
  },
  "keywords": [
    "whatsapp",
    "baileys",
    "mongodb",
    "session",
    "auth",
    "typescript",
    "whatsapp-web"
  ],
  "homepage": "https://github.com/ecdevz/wsm.git#readme",
  "types": "lib/index.d.ts",
  "main": "lib/index.js",
  "module": "lib/index.js",
  "exports": {
    ".": {
      "types": "./lib/index.d.ts",
      "import": "./lib/index.js",
      "require": "./lib/index.js"
    }
  },
  "files": [
    "lib/**/*",
    "README.md",
    "LICENSE"
  ],
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "build": "npm run clean && tsc",
    "clean": "rimraf lib",
    "dev": "tsc --watch",
    "prepack": "npm run build",
    "prepare": "npm run build",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src --ext .ts --fix",
    "lint:check": "eslint src --ext .ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "docs": "typedoc",
    "docs:serve": "typedoc --watch",
    "release": "release-it",
    "release:local": "node -e \"process.platform === 'win32' ? require('child_process').spawn('cmd', ['/c', 'scripts\\\\release.bat'], {stdio: 'inherit'}) : require('child_process').spawn('bash', ['scripts/release.sh'], {stdio: 'inherit'})\"",
    "validate": "npm run lint:check && npm run format:check && npm run build && npm run test",
    "prepublishOnly": "npm run validate",
    "version:patch": "npm version patch",
    "version:minor": "npm version minor",
    "version:major": "npm version major",
    "publish:latest": "npm publish --tag latest",
    "publish:beta": "npm publish --tag beta",
    "publish:dry": "npm publish --dry-run",
    "release:patch": "npm run validate && npm version patch && git push origin main && git push origin --tags && npm publish",
    "release:minor": "npm run validate && npm version minor && git push origin main && git push origin --tags && npm publish",
    "release:major": "npm run validate && npm version major && git push origin main && git push origin --tags && npm publish",
    "release:beta": "npm run validate && npm version prerelease --preid=beta && git push origin main && git push origin --tags && npm publish --tag beta"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ecdevz/wsm.git"
  },
  "bugs": {
    "url": "https://github.com/ecdevz/wsm/issues"
  },
  "dependencies": {
    "libsignal": "^2.0.1",
    "mongoose": "^8.18.1"
  },
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "jest": "^29.5.0",
    "prettier": "^3.0.0",
    "release-it": "^19.0.5",
    "rimraf": "^5.0.0",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.0",
    "tsx": "^4.20.5",
    "typedoc": "^0.25.0",
    "typescript": "^5.2.0"
  },
  "peerDependencies": {
    "@types/qrcode": "^1.5.5",
    "baileys": "^7.0.0-rc.3",
    "qrcode": "^1.5.4"
  }
}
